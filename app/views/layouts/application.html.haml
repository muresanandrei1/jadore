!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Jadore Hotel - Hotel Lugoj
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag    'style', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body{class: "#{add_page_class(piscina_path, 'pool-page')} #{add_page_class(evenimente_path, 'event-page')} #{add_page_class(restaurants_path, 'restaurant-page')}"}
    = render 'partials/header'
    = yield
    = render 'partials/footer'
