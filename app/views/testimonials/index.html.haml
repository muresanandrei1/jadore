%br
.container
  = link_to 'Adauga testimonial nou', new_testimonial_path, class: 'btn btn-border'
  - @testimonial.each do |testimonial|
    %hr
    .row
      .col-md-6
        %h3 Nume:
        = testimonial.name
        %br
        %h3 Firma:
        = testimonial.firm
        %br
        %h3 Descriere:
        = testimonial.description
      .col-md-6
        = link_to 'Edit', edit_testimonial_path(testimonial), class: 'btn btn-border'
        %br
        %br
        = link_to 'Delete', testimonial_path(testimonial), class: 'btn btn-border', method: :delete, data: { confirm: 'Sunteti sigur?' }
%br
